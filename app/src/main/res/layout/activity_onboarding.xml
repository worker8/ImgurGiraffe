<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F3"
    android:clipChildren="false"
    tools:context=".OnboardingActivity">

    <TextView
        android:id="@+id/obLoginWelcome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textSize="30sp"
        android:typeface="sans"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="60dp"
        android:text="Welcome!"/>

    <TextView
        android:id="@+id/obLoginWelcome2"
        app:layout_constraintTop_toBottomOf="@id/obLoginWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="sans-serif-light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="Sign in or use as a Guest"/>


    <ImageView
        app:layout_constraintTop_toBottomOf="@id/obLoginWelcome2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/obLoginGiraffeImage"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/giraffe_1024"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/obLoginTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/obLoginGiraffeImage"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="Login"
        app:cornerRadius="4dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/obGuestTV"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/obLoginTV"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_height="wrap_content"
        android:text="@string/continue_as_guest"/>
</androidx.constraintlayout.widget.ConstraintLayout>
